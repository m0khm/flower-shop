upstream app_upstream {
  server 127.0.0.1:3000;  # Next.js внутри докера слушает 3000
}

server {
  listen 80;
  server_name цветочница-анюта.рф www.цветочница-анюта.рф;

  # ACME-challenge для certbot (если будете ставить SSL позже)
  location /.well-known/acme-challenge/ {
    root /var/www/certbot;
    try_files $uri =404;
  }

  # Всё остальное — проксируем на приложение
  location / {
    proxy_pass         http://app_upstream;
    proxy_http_version 1.1;
    proxy_set_header   Upgrade $http_upgrade;
    proxy_set_header   Connection "upgrade";
    proxy_set_header   Host $host;
    proxy_cache_bypass $http_upgrade;
  }

  error_page 500 502 503 504 /50x.html;
  location = /50x.html {
    root /usr/share/nginx/html;
  }
}
